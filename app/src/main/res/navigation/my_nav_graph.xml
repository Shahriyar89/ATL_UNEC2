<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/hiltTestFragment">


    <action
        android:id="@+id/globalAction_to_ExampleFragment"
        app:destination="@+id/settingFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.atl_unec2.uicomponents.viewmodels.viewmodel.SampleFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <deepLink
            android:id="@+id/deeplinkHome"
            android:autoVerify="true"
            app:action="android.intent.action.MY_ACTION"
            app:uri="atl://startDestination/" />


        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.atl_unec2.uicomponents.fragments.ProductFragment"
        android:label="ProductFragment">
        <action
            android:id="@+id/action_productFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <deepLink
            android:id="@+id/productF"
            android:autoVerify="true"
            app:uri="atl://prFragment/" />

        <argument
            android:name="itemId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.atl_unec2.uicomponents.fragments.Example2Fragment"
        android:label="ExampleFragment2">
        <action
            android:id="@+id/action_settingFragment_to_myFragment"
            app:destination="@id/myFragment" />
    </fragment>
    <fragment
        android:id="@+id/othersFragment"
        android:name="com.example.atl_unec2.uicomponents.dialogs.OthersFragment"
        android:label="fragment_others"
        tools:layout="@layout/fragment_others" />

    <fragment
        android:id="@+id/myFragment"
        android:name="com.example.atl_unec2.uicomponents.fragments.FirstFragment"
        android:label="fragment_others"
        tools:layout="@layout/fragment_first">
        <deepLink
            android:id="@+id/myFragmentDeeplink"
            android:autoVerify="true"
            app:uri="atl://firstFragment1/" />
    </fragment>

    <dialog
        android:id="@+id/myCustomDialog"
        android:name="com.example.atl_unec2.uicomponents.dialogs.CustomDialogFragment"
        android:label="Dialog"
        tools:layout="@layout/fragment_custom_dialog" />


    <include app:graph="@navigation/second_nav_graph" />
    <fragment
        android:id="@+id/roomDbFragment"
        android:name="com.example.atl_unec2.room.lesson.RoomDbFragment"
        android:label="fragment_room_db"
        tools:layout="@layout/fragment_room_db" />
    <fragment
        android:id="@+id/retrofitImplFragment"
        android:name="com.example.atl_unec2.network.RetrofitImplFragment"
        android:label="fragment_retrofit_impl"
        tools:layout="@layout/fragment_retrofit_impl" />
    <fragment
        android:id="@+id/signUpInFragment"
        android:name="com.example.atl_unec2.room.sign_in_up.view.SignUpInFragment"
        android:label="fragment_sign_up_in"
        tools:layout="@layout/fragment_sign_up_in" />
    <fragment
        android:id="@+id/coroutinesFragment"
        android:name="com.example.atl_unec2.coroutines.CoroutinesFragment"
        android:label="fragment_coroutines"
        tools:layout="@layout/fragment_coroutines" />
    <fragment
        android:id="@+id/multipartFragment"
        android:name="com.example.atl_unec2.network.practical.MultipartFragment"
        android:label="fragment_multipart"
        tools:layout="@layout/fragment_multipart" />
    <fragment
        android:id="@+id/kotlinFlowFragment"
        android:name="com.example.atl_unec2.coroutines.flow.KotlinFlowFragment"
        android:label="kotlinFlowFragment"
        tools:layout="@layout/fragment_kotlin_flow" />
    <fragment
        android:id="@+id/kotlinFlowsFragment"
        android:name="com.example.atl_unec2.coroutines.KotlinFlowsFragment"
        android:label="fragment_kotlin_flows"
        tools:layout="@layout/fragment_kotlin_flows" />

    <fragment
        android:id="@+id/hiltTestFragment"
        android:name="com.example.atl_unec2.di.TestHiltFragment"
        android:label="TestHiltFragment"
        tools:layout="@layout/fragment_test_hilt" />

</navigation>